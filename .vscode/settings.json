{
  // Enable the ESlint flat config support
  "eslint.experimental.useFlatConfig": true,
  // Disable prettier, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,
  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  // see ./tailwind.json
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  // i18n
  "i18n-ally.localesPaths": [ "src/i18n" ],
  "i18n-ally.enabledFrameworks": ["vue"],
  "i18n-ally.extract.autoDetect": true, // i18n 点击启用默认不会自动 detect, 手动开启
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "zh", // 未被翻译的文字在翻译时，将文字填充到该语言中。
  "i18n-ally.displayLanguage": "zh", // vsc 编辑器展示的语言
  "i18n-ally.extract.keygenStyle": "camelCase",
  "i18n-ally.indent": 2,
  "i18n-ally.tabStyle": "space",
  // "i18n-ally.namespace": true,
  // "i18n-ally.sortKeys": true,
}